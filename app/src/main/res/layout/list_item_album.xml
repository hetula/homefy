<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_margin="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/albumViewBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="false">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/albumArtView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_album" />

        <androidx.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/albumTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:textAlignment="center"
            android:textColor="@color/primaryTextDark"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/albumArtView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="This will be the alb um title all" />

        <androidx.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/artistNames"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_artist_14dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/secondaryText"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/albumArtView"
            app:layout_constraintTop_toBottomOf="@id/albumTitle"
            tools:text="Artist(s) come here!" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/albumSongCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_song_14dp"
            android:lines="1"
            android:textColor="@color/secondaryText"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/albumArtView"
            app:layout_constraintTop_toBottomOf="@id/artistNames"

            tools:text="0 songs" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
