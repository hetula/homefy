<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_margin="2dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/artistViewBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="false">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/artistArtView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_artist" />

        <androidx.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/artistTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:textAlignment="center"
            android:textColor="@color/primaryText"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/artistArtView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Artist Title here!" />

        <androidx.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/albumCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/secondaryText"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/artistArtView"
            app:layout_constraintTop_toBottomOf="@id/artistTitle"
            tools:text="342 Albums" />
    </android.support.constraint.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
